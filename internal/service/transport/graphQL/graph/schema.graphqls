schema { 
  query: Query
  mutation: Mutation
}

type Item {
    id: Int
    name: String!
    price: Int!
    itemsNumber: Int!
    desc: String
}

type Query {
    getItems: [Item]
    getItem(Id: ID!): Item
}

type Mutation {
    addItem(item: Iteminput!): Int
    updatePerson(id: ID!): Item
    deletePerson(id: ID!): Boolean
}

input Iteminput {
    name: String!
    price: Int!
    itemsNumber: Int!
    desc: String
}